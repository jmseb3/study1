<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/coin_kor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비트코인"
        android:layout_marginRight="3dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/coin_eng_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coin_eng_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBaseline_toBaselineOf="@id/coin_kor_name"
        android:text="BitCoin"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/coin_kor_name"
        app:layout_constraintLeft_toRightOf="@id/coin_kor_name"
        app:layout_constraintRight_toLeftOf="@+id/market" />

    <TextView
        android:id="@+id/market"
        android:layout_width="0dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:text="KRW-BTC"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/coin_kor_name"
        app:layout_constraintBottom_toBottomOf="@id/coin_kor_name"
        app:layout_constraintLeft_toRightOf="@id/coin_eng_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/coin_kor_name" />


</androidx.constraintlayout.widget.ConstraintLayout>